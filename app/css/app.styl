@import 'lib/grid.styl'

global-reset();

color0 = #171e21; /* text */
color1 = #334d5c; /* dark blue */
color2 = #46b29d; /* blue green */
color3 = #f6f8fb; /* off-white, bg. */
color4 = #e27a3f; /* orangey */
color5 = #df5a49; /* reddy */

width = 800px;


* {
  box-sizing: border-box;
  font-family: 'Exo 2', sans-serif;
  color: color0;
}

block() {
  margin-left: auto;
  margin-right: auto;
  max-width: width;
}

body {
  margin: 0;
  background-color: color3;
  border-top: 5px solid color5;
}

header {
  block();
  padding: 30px 0;
  overflow: hidden;

  h1 {
    color: color0;
    display: inline-block;
    font-size: 3em;
    font-weight: normal;
    margin: 0;
    float: left;
  }

  nav {
    display: inline-block;
    float: right;
    line-height: 3.5em;
    text-align: right;

    a {
      color: color0;
      margin-left: 1.5em;
      text-decoration: none;
      text-transform: lowercase;
    }
  }
}

article {
  block();
}

file-tree {
  display: block;
  line-height: 1.3em;

  > ul > li {
    list-style: none;
  }

  file {
    cursor: pointer;
    display: block;
    max-width: width;
    overflow: hidden;
    padding-left: 12px;
    position: relative;
    text-overflow: ellipsis;

    &[type=dir] {
      > file-tree {
        margin-left: 6px;
      }

      > span[name=path]:after {
        content: "/";
      }
    }

    // Tree lines
    &:before,
    &:after {
      border: 0px dotted #888;
      content: "";
      position: absolute;
      top: 0;
      left: 0;
    }

    // Horizontal line.
    &:before {
      border-top-width: 1px;
      height: 1px;
      top: 10px;
      width: 8px;
    }

    // Vertical line.
    &:after {
      border-left-width: 1px;
      height: 100%;
      width: 1px;
    }

    // Make the last line end correctly.
    &:last-child:after {
      height: 10px
    }

    // File/folder icon, and checks.
    .fa-stack {
      color: #888;
      height: 1.5em;
      width: 1em;

      .fa-stack-1x {
        top: -5px;
      }

      .fa-check {
        color: #111;
        left: 2px;
        top: -6px;

        &.fade {
          color: #999;
        }
      }
    }

    span {
      white-space: nowrap;
    }
  }
}

button {
  border: 1px solid transparent;
  margin: 2px;
  border-radius: 3px;
  padding: 3px 6px;
  cursor: pointer;
  box-shadow: 0px 1px 0px rgba(255, 255, 255, 0.2) inset;
  position: relative;

  &:after {
    content: "";
    position: absolute;
    top: -1px;
    left: -1px;
    right: -1px;
    bottom: -1px;
    background-color: rgba(0, 0, 0, 0);
  }

  &:not([disabled]):hover:after {
    background-color: rgba(255, 255, 255, 0.15);
  }

  &[disabled]:after {
    background-color: rgba(255, 255, 255, 0.5);
  }
}

.action-bar {
  margin-bottom: 10px;

  .action {
    background: color2;
  }
}

nice-size {
  font-size: 0.8em;
  opacity: 0.5;

  &:before {
    content: "(";
  }

  &:after {
    content: ")";
  }
}

.loading {
  size = 25px;

  -webkit-animation: spin 1s linear infinite;
  animation: spin 3s linear infinite;
  background: color1;
  height: 0;
  height: size;
  left: 50%;
  margin-left: -(size / 2)px;
  opacity: 0;
  position: absolute;
  top: 50px;
  transition: 0.5s all;
  width: 0;
  width: size;

  &.show {
    opacity: 1;
  }
}

@-webkit-keyframes spin {
  0% {
    -webkit-transform: rotate(0deg);
  }

  100% {
    -webkit-transform: rotate(360deg);
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}
